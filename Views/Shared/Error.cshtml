@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-danger text-white">
                    <h2 class="mb-0"><i class="bi bi-exclamation-triangle me-2"></i>Error</h2>
                </div>
                <div class="card-body text-center py-5">
                    <i class="bi bi-x-circle text-danger" style="font-size: 5rem;"></i>
                    <h3 class="text-danger mt-3">An error occurred while processing your request.</h3>
                    
                    @if (Model.ShowRequestId)
                    {
                        <div class="mt-4">
                            <p class="text-muted">
                                <strong>Request ID:</strong> <code>@Model.RequestId</code>
                            </p>
                        </div>
                    }

                    <div class="mt-4">
                        <a href="/" class="btn btn-primary">
                            <i class="bi bi-house me-2"></i>Return to Home
                        </a>
                    </div>
                </div>
            </div>

            @if (Model.ShowRequestId)
            {
                <div class="card mt-4">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Development Mode</h5>
                    </div>
                    <div class="card-body">
                        <p>
                            Swapping to <strong>Development</strong> environment will display more detailed information about the error that occurred.
                        </p>
                        <p class="text-warning">
                            <i class="bi bi-exclamation-triangle me-1"></i>
                            <strong>The Development environment shouldn't be enabled for deployed applications.</strong>
                            It can result in displaying sensitive information from exceptions to end users.
                        </p>
                        <p>
                            For local debugging, enable the <strong>Development</strong> environment by setting the <strong>ASPNETCORE_ENVIRONMENT</strong> environment variable to <strong>Development</strong>
                            and restarting the app.
                        </p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
