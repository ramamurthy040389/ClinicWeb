@{
    ViewData["Title"] = "Manage Doctors";
}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="d-flex align-items-center">
            <i class="bi bi-person-badge-fill text-primary me-2" style="font-size: 2rem;"></i>
            <h2 class="mb-0 fw-bold">Manage Doctors</h2>
        </div>
        <button id="btnNewDoctor" class="btn btn-primary">
            <i class="bi bi-plus-circle me-2"></i>New Doctor
        </button>
    </div>

    <div id="doctorsList" class="list-group"></div>

    <!-- Modal -->
    <div class="modal fade" id="doctorModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form id="doctorForm">
                    <div class="modal-header">
                        <h5 class="modal-title" id="modalTitle">
                            <i class="bi bi-person-plus me-2"></i>New Doctor
                        </h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <input type="hidden" id="doctorId" />
                        <div class="mb-3">
                            <label class="form-label">Name</label>
                            <input id="doctorName" class="form-control" required maxlength="120" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Specialization</label>
                            <input id="doctorSpec" class="form-control" required maxlength="80" />
                        </div>
                        <div id="doctorError" class="text-danger"></div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/doctors.js" asp-append-version="true"></script>
}
