@{
    ViewData["Title"] = "Patient Search";
}
<div class="container mt-4">
    <div class="d-flex align-items-center mb-4">
        <i class="bi bi-search-heart text-primary me-2" style="font-size: 2rem;"></i>
        <h2 class="mb-0 fw-bold">Patient Search</h2>
    </div>

    <div class="card mb-4 fade-in">
        <div class="card-header">
            <h5 class="mb-0"><i class="bi bi-file-earmark-medical me-2"></i>Search by File Number</h5>
        </div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-8">
                    <label class="form-label">File Number</label>
                    <input id="fileNo" class="form-control" placeholder="Enter patient file number" />
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <button id="searchBtn" class="btn btn-primary w-100">
                        <i class="bi bi-search me-2"></i>Search
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div id="patientResult"></div>
</div>

<script src="~/js/app.js"></script>
