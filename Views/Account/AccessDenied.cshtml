@{
    ViewData["Title"] = "Access Denied";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-warning text-dark">
                    <h3 class="mb-0"><i class="bi bi-shield-exclamation me-2"></i>Access Denied</h3>
                </div>
                <div class="card-body text-center py-5">
                    <i class="bi bi-lock text-warning" style="font-size: 5rem;"></i>
                    <h4 class="mt-3 text-warning">You are not authorized to access this resource.</h4>
                    <p class="text-muted mt-3">Please contact an administrator if you believe you should have access to this page.</p>
                    <div class="mt-4">
                        <a href="/" class="btn btn-primary me-2">
                            <i class="bi bi-house me-2"></i>Return to Home
                        </a>
                        <a href="/Account/Login" class="btn btn-outline-primary">
                            <i class="bi bi-box-arrow-in-right me-2"></i>Login
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
